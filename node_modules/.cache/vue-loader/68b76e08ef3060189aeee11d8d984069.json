$event)\" />\n  </div>\n</template>\n\n<script>\nexport default {\n  name: \"Photo\",\n  data() {\n    return {\n      errorMsg: \"\",\n      showErrorMsg: false,\n      image: this.$store.getters[\"itemInformation/getInitialImage\"]\n    };\n  },\n  methods: {\n    saveImage(img) {\n      this.$store.dispatch(\"itemInformation/saveImage\", img);\n    },\n    fileClick: function() {\n      $(\"#upload_file\").click();\n    },\n    onFileChange: function(e) {\n      var files = e.target.files || e.dataTransfer.files;\n      this.createImage(files[0]);\n\n    },\n    createImage: function(file) {\n      var reader = new FileReader();\n      var vm = this;\n      reader.onload = function(e) {\n        vm.image.thumnail = e.target.result;\n        vm.image.uploadFile = file;\n        vm.image.name = file.name;\n\n        // アップロード成功すれば商品ページに遷移する\n        if (vm.checkEmptyImage(vm.image)) {\n          vm.setErrorMsg();\n        } else {\n          vm.saveImage(vm.image);\n          vm.openItemInformationPage();\n        }\n      };\n      reader.readAsDataURL(file);\n    },\n    checkEmptyImage: function(image) {\n      return (\n        image.thumnail === \"\" && Object.keys(image.uploadFile).length === 0 && image.name === \"\"\n      );\n    },\n    openItemInformationPage() {\n      this.$router.push({ path: \"item_information\" });\n    },\n    setErrorMsg: function() {\n      this.errorMsg = \"クリックして写真を登録してください\";\n      this.showErrorMsg = true;\n    }\n  }\n};\n</script>\n<style>\n.error-msg {\n  color: red;\n  font-size: 16px;\n  margin-top: 10px;\n}\n</style>\n"]}]}